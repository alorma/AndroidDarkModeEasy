<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        style="@style/Widget.Demo.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0dp elevation" />

    <com.alorma.demodaarkview.PinKeyboardView
        android:id="@+id/pin0"
        style="@style/Widget.Demo.Pin.Primary"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        style="@style/Widget.Demo.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2dp elevation" />

    <com.alorma.demodaarkview.PinKeyboardView
        android:id="@+id/pin2"
        style="@style/Widget.Demo.Pin.Secondary"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="2dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        style="@style/Widget.Demo.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8dp elevation" />

    <com.alorma.demodaarkview.PinKeyboardView
        android:id="@+id/pin8"
        style="@style/Widget.Demo.Pin.OnSurface"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="4dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        style="@style/Widget.Demo.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="16dp elevation" />

    <com.alorma.demodaarkview.PinKeyboardView
        android:id="@+id/pin16"
        style="@style/Widget.Demo.Pin.Error"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:elevation="16dp" />


</LinearLayout>